---
interface Props {
  title: string;
  value: number;
  bgColor?: string;
  textColor?: string;
}
const { title, value, bgColor, textColor } = Astro.props;
---

<div
  class={`flex items-center justify-between w-full ${
    bgColor ?? ""
  } rounded-xl px-4 py-3.5 text-base sm:text-lg text-my-navy-900`}
>
  <div class="flex gap-3">
    <img src={`/assets/images/icon-${title.toLowerCase()}.svg`} />
    <span class={`${textColor ?? ""}`}>{title}</span>
  </div>
  <div class="font-medium">
    {value}
    <span class="opacity-50">/ 100</span>
  </div>
</div>
